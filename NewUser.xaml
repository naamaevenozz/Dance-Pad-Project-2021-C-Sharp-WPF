<Window x:Class="WPF_DancePad_Client.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DancePad_Client"
        mc:Ignorable="d"
        Title="NewUser" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/Disco.jpg"/>
        </Grid.Background>
        <Label Content="Welcome to the game new dancer!&#xD;&#xA;enter your details to make&#xD;&#xA; your own account!" HorizontalAlignment="Left"  Margin="147,51,0,0" Width="561" FontFamily="Showcard Gothic" FontSize="30"  VerticalAlignment="Top" Height="125" Background="Plum"/>
        <TextBox Name="TextUser" HorizontalAlignment="Left" Height="39" Margin="370,200,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="96"  TextChanged="TextBox_TextChanged" Background="Plum" FontFamily="Showcard Gothic"/>
        <TextBox Name="TextPass" HorizontalAlignment="Left" Height="39" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Margin="370,250,0,0" Background="Plum" TextChanged="TextBox_TextChanged_1" FontFamily="Showcard Gothic"/>
        <Label Content="Enter user name:&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="219,198,0,0" Background="Plum" Height="39" Width="145" FontFamily="Showcard Gothic"/>
        <Label Content="Enter password:&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="219,250,0,0" Background="Plum" Width="145" Height="39" FontFamily="Showcard Gothic"/>
        <Button Content="Enter" HorizontalAlignment="Left" Height="38" Margin="322,310,0,0" VerticalAlignment="Top" Width="87" Click="Enter" Background="Plum" FontFamily="Showcard Gothic"/>
    </Grid>
</Window>
